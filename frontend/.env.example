# API Configuration
VITE_API_BASE_URL=http://localhost:8080/api/v1

# Firebase Configuration
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-firebase-app-id

# Google Maps Configuration
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Application Configuration
VITE_APP_NAME=Travel Itinerary Planner
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-powered travel itinerary planner

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_OFFLINE_MODE=true

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=your-ga-tracking-id
VITE_HOTJAR_ID=your-hotjar-id

# Environment
VITE_NODE_ENV=development

# Social Login (optional)
VITE_GOOGLE_CLIENT_ID=your-google-oauth-client-id
VITE_FACEBOOK_APP_ID=your-facebook-app-id

# CDN Configuration (for production)
VITE_CDN_URL=https://cdn.yourdomain.com

# Sentry Error Tracking (optional)
VITE_SENTRY_DSN=your-sentry-dsn
VITE_SENTRY_ENVIRONMENT=development

# PWA Configuration
VITE_PWA_NAME=Travel Planner
VITE_PWA_SHORT_NAME=TravelPlanner
VITE_PWA_THEME_COLOR=#1976d2
VITE_PWA_BACKGROUND_COLOR=#ffffff